extends layout
block content
  h1= title
  p Welcome to the Fruits 
  div(class="container-fluid")
        div(class="row")
            -
                let fruits = [
                    {
                        "Itemname": "Apple",
                        "Quantity": 12,
                        "price": "Three USD"
                    },
                    {
                        "Itemname": "Banana",
                        "Quantity": 30,
                        "price": "Five USD"
                    },
                    {
                        "Itemname": "Grape",
                        "Quantity": 21,
                        "price": "Seven USD"
                    },                   
                ]
            each v,index in fruits
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }